{
	"manifest_version": 2,

	"name": "YoutubeNotifications",
	"description": "Displays notifications on video change on YouTube.",
	"version": "1.0",

	"permissions": [
		"notifications"
	],

	"browser_action": {
		"default_title": "YoutubeNotifications",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/watch*"],
			"js": ["main.js"]
		}
	]
}